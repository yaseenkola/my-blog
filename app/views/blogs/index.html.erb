<h1>Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= link_to blog.status, "javascript:void(0);", class: "test", id: blog.id, style:"text-decoration: none;"  %></td>
        <!--<td><%= link_to 'Show', blog %></td>-->
        <!--<td><%= link_to 'Edit', edit_blog_path(blog) %></td>-->
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

